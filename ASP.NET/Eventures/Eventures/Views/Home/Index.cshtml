@{
    ViewData["Title"] = "Index";
}

<div class="jumbotron bg-eventures">
    <h1 class="display-4">Eventures - ticket service</h1>
    <hr class="hr-2 bg-dark"/>
</div>

@if (this.User.Identity.IsAuthenticated)
{
    @if (this.User.IsInRole("Admin"))
    {
        <h3>Enjoy your work, Administrator @this.User.Identity.Name</h3>
    }
    else
    {
        <h3>Welcome, @this.User.Identity.Name</h3>
    }
}
